@page "/environments"

<PageTitle>Environments</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="10" Style="margin-top: 10px;">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="#">
            Home
            <FluentIcon Value="@(new Icons.Regular.Size16.Home())" Color="@Color.Neutral" Slot="start" />
        </FluentBreadcrumbItem>
        <FluentBreadcrumbItem Href="#">
            Environments
            <FluentIcon Value="@(new Icons.Regular.Size16.Clipboard())" Color="@Color.Neutral" Slot="start" />
        </FluentBreadcrumbItem>
    </FluentBreadcrumb>
</FluentStack>

<FluentToolbar Style="display: flex; width: 100%; margin-top:10px;">
    <FluentStack>
        <FluentLabel Typo="Typography.H3">Environments</FluentLabel>
        <FluentSpacer />
        <FluentButton IconStart="@(new Icons.Regular.Size16.ArrowSync())">Refresh</FluentButton>

        <FluentButton Appearance="Appearance.Accent" IconStart="@(new Icons.Regular.Size16.AddCircle())">
            Add Environment
        </FluentButton>
    </FluentStack>
</FluentToolbar>

<FluentStack Orientation="Orientation.Horizontal" Style="margin-top: 20px;">
    <FluentGrid>
        <FluentGridItem>
            <FluentStack Orientation="Orientation.Vertical" Width="500px">
                <FluentLabel Typo="Typography.H3" MarginBlock="default">Feature</FluentLabel>
                <FluentCard>
                    <FluentStack Orientation="Orientation.Horizontal">
                        <FluentIcon Value="@(new Icons.Regular.Size32.CloudCheckmark())" Color="@Color.Success" />
                        <FluentLabel Typo="Typography.H4" MarginBlock="default">Billing API</FluentLabel>
                        <FluentBadge Appearance="Appearance.Accent">
                            20231228
                        </FluentBadge>
                    </FluentStack>
                    <FluentButton Appearance="@Appearance.Accent">Click Me</FluentButton>
                </FluentCard>

                <FluentCard Style="margin-top: 10px">
                    <FluentStack Orientation="Orientation.Horizontal">
                        <FluentIcon Value="@(new Icons.Regular.Size32.CloudError())" Color="@Color.Error" />
                        <FluentLabel Typo="Typography.H4" MarginBlock="default">Order API</FluentLabel>
                    </FluentStack>
                    <FluentButton Appearance="@Appearance.Accent">Click Me</FluentButton>
                </FluentCard>

            </FluentStack>
        </FluentGridItem>

        <FluentGridItem>
            <FluentStack Orientation="Orientation.Vertical" Width="500px">
                <FluentLabel Typo="Typography.H3" MarginBlock="default">Development</FluentLabel>
                <FluentCard>
                    <FluentStack Orientation="Orientation.Horizontal">
                        <FluentIcon Value="@(new Icons.Regular.Size32.CloudCheckmark())" Color="@Color.Success" />
                        <FluentLabel Typo="Typography.H4" MarginBlock="default">Billing API</FluentLabel>
                        <FluentBadge Appearance="Appearance.Accent">
                            20231220
                        </FluentBadge>
                    </FluentStack>
                    <FluentButton Appearance="@Appearance.Accent">Click Me</FluentButton>
                </FluentCard>

            </FluentStack>
        </FluentGridItem>
    </FluentGrid>
</FluentStack>


